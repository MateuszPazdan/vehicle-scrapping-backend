generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  email          String   @unique
  hashedPassword String
  isAdmin        Boolean  @default(false)
}

model Vehicle {
  id                              Int            @id @default(autoincrement())
  brand                           String
  model                           String
  year_of_production              Int
  vin                             String         @unique
  registration_number             String         @unique
  registration_certificate_number String
  weight                          Float
  owners                          OwnerVehicle[]
  status                          VehicleStatus
  receivedAt                      DateTime       @default(now())
  dismantledAt                    DateTime?
  wasteEntries                    WasteEntry[]
}

model Owner {
  id        Int            @id @default(autoincrement())
  name      String
  surname   String
  pesel     String         @unique
  address   String
  id_number String         @unique
  vehicles  OwnerVehicle[]
}

model OwnerVehicle {
  ownerId   Int
  vehicleId Int
  owner     Owner   @relation(fields: [ownerId], references: [id])
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@id([ownerId, vehicleId])
}

model WasteEntry {
  id          Int       @id @default(autoincrement())
  vehicle     Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId   Int
  wasteType   WasteType @relation(fields: [wasteTypeId], references: [id])
  wasteTypeId Int
  weight      Float
}

model WasteType {
  id                Int             @id @default(autoincrement())
  name              String          @unique
  pricePerKg        Float
  storageLocation   StorageLocation @relation(fields: [storageLocationId], references: [id])
  storageLocationId Int             @unique
  WasteEntry        WasteEntry[]
}

model StorageLocation {
  id          Int        @id @default(autoincrement())
  locationNr  String     @unique
  currentMass Float
  wasteType   WasteType?
}

enum VehicleStatus {
  DISMANTLED
  RECEIVED_FOR_DISMANTLING
}
